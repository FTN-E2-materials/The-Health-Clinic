                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.ToolTip>
                                <ToolTip>
                                    <Grid>
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   Foreground="Black">
                                        Save
                                        </TextBlock>
                                    </Grid>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </Border>
                    <Border Background="{DynamicResource LowContrastNeutralBrush}"
                            Margin="5,0"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            BorderThickness="0">
