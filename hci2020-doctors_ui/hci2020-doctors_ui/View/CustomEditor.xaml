<Window x:Class="hci2020_doctors_ui.View.CustomEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hci2020_doctors_ui.View"
        xmlns:sfInput="clr-namespace:Syncfusion.Windows.Controls.Input;assembly=Syncfusion.SfInput.Wpf"
        xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.Wpf"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:validation="clr-namespace:hci2020_doctors_ui.Validation"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        x:Name="customEditor"
        Title="Custom Editor"
        Width="490"
        Height="520"
        ResizeMode="NoResize"
        syncfusion:SkinStorage.VisualStyle="Metro"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="Foreground" Value="{DynamicResource HighContrastNeutralBrush}" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin"
                    Value="5,0,5,5" />
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource LowContrastNeutralBrush}">

        <Border Background="{DynamicResource LowContrastNeutralBrush}">
            <Grid Margin="10"
                  Background="{DynamicResource LowContrastNeutralBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.4*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="2"
                            Margin="55,10,55,0">
                    <TextBlock Margin="18,5,2,13"
                               FontSize="26"
                               Foreground="{StaticResource BrandColorBrush}"
                               FontWeight="SemiBold"
                               Text="{DynamicResource Details}" />

                    <TextBlock Margin="18,15,0,5"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource HighContrastNeutralBrush}"
                               Text="{DynamicResource DateLabel}" />

                    <DatePicker x:Name="startdate"
                                FontSize="16"
                                Width="325"
                                Background="{DynamicResource LowContrastNeutralBrush}"
                                Foreground="{DynamicResource HighContrastNeutralBrush}"
                                Margin="6,0,5,5"
                                >
                        <DatePicker.Resources>
                            <SolidColorBrush x:Key="PrimaryHueMidBrush"
                                             Color="{StaticResource BrandColor}"></SolidColorBrush>
                            <SolidColorBrush x:Key="MaterialDesignBody"
                                             Color="{StaticResource BackgroundDark}"></SolidColorBrush>
                        </DatePicker.Resources>
                        <DatePicker.SelectedDate>
                            <Binding Path="StartDate"
                                     Mode="TwoWay"
                                     UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validation:DateExpiredRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </DatePicker.SelectedDate>
                    
                    </DatePicker>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Left">
                            <TextBlock Margin="5,15,0,5"
                                       FontWeight="SemiBold"
                                       Background="{DynamicResource LowContrastNeutralBrush}"
                                       Foreground="{DynamicResource HighContrastNeutralBrush}"
                                       Text="{DynamicResource StartDateLabel}" />

                            <materialDesign:TimePicker x:Name="startime"
                                                       FontSize="16"
                                                       Width="120"
                                                       Foreground="{DynamicResource HighContrastNeutralBrush}"
                                                       Margin="5,0,5,5">
                                <materialDesign:TimePicker.SelectedTime>
                                    <Binding Path="StartTime"
                                             Mode="TwoWay"
                                             UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:TimeExpiredRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </materialDesign:TimePicker.SelectedTime>
                                <materialDesign:TimePicker.Resources>
                                    <SolidColorBrush x:Key="PrimaryHueMidBrush"
                                                     Color="{StaticResource BrandColor}"></SolidColorBrush>
                                    <SolidColorBrush x:Key="MaterialDesignBody"
                                                     Color="{StaticResource BackgroundDark}"></SolidColorBrush>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Text"
                                                Value="{DynamicResource SelectTime}" />
                                    </Style>
                                </materialDesign:TimePicker.Resources>
                            </materialDesign:TimePicker>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Right"
                                    Margin="75,0,0,0">

                            <TextBlock Margin="5,15,0,5"
                                       FontWeight="SemiBold"
                                       Background="{DynamicResource LowContrastNeutralBrush}"
                                       Foreground="{DynamicResource HighContrastNeutralBrush}"
                                       Text="{DynamicResource EndDateLabel}" />
                            <materialDesign:TimePicker FontSize="16"
                                                       Foreground="{DynamicResource HighContrastNeutralBrush}"
                                                       Width="120"
                                                       x:Name="endtime"
                                                       Margin="5,0,5,5">
                                <materialDesign:TimePicker.SelectedTime>
                                    <Binding Path="EndTime"
                                             Mode="TwoWay"
                                             UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:TimeExpiredRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </materialDesign:TimePicker.SelectedTime>
                                <materialDesign:TimePicker.Resources>
                                    <SolidColorBrush x:Key="PrimaryHueMidBrush"
                                                     Color="{StaticResource BrandColor}"></SolidColorBrush>
                                    <SolidColorBrush x:Key="MaterialDesignBody"
                                                     Color="{StaticResource BackgroundDark}"></SolidColorBrush>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Text"
                                                Value="{DynamicResource SelectTime}" />
                                    </Style>
                                </materialDesign:TimePicker.Resources>
                            </materialDesign:TimePicker>
                        </StackPanel>
                    </StackPanel>



                    <TextBlock Margin="18,15,0,5"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource HighContrastNeutralBrush}"
                               Text="{DynamicResource RoomNumber}" />
                    <TextBox FontSize="16"
                             Width="325"
                             Foreground="{DynamicResource HighContrastNeutralBrush}"
                             Background="{DynamicResource LowContrastNeutralBrush}"
                             Margin="9,0,7,5"
                             VerticalAlignment="Center"
                             Style="{StaticResource TextBox}"
                             Text="{Binding Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Margin="18,15,0,5"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource HighContrastNeutralBrush}"
                               Text="{DynamicResource PatientLabel}" />
                    <TextBox x:Name="patient"
                             FontSize="16"
                             Width="325"
                             Foreground="{DynamicResource HighContrastNeutralBrush}"
                             Background="{DynamicResource LowContrastNeutralBrush}"
                             Margin="7,0,7,5"
                             VerticalAlignment="Center"
                             Style="{StaticResource TextBox}"
                             Text="{Binding Patient, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <StackPanel x:Name="showmorepanel">
                        <TextBlock Margin="18,15,0,5"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource HighContrastNeutralBrush}"
                                   Text="{DynamicResource AppointmentTypeLabel}" />
                        <ComboBox x:Name="apptype"
                                  Width="325"
                                  Foreground="{DynamicResource HighContrastNeutralBrush}"
                                  Background="{DynamicResource LowContrastNeutralBrush}"
                                  FontSize="16"
                                  Margin="5,0,5,5"
                                  Style="{StaticResource MaterialDesignComboBox}"
                                  SelectedItem="{Binding Apptype, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background"
                                        Value="{DynamicResource LowContrastNeutralBrush}" />
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
