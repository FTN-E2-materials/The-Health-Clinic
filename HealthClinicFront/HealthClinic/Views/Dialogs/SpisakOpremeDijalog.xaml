<Window x:Class="HealthClinic.Dialogs.SpisakOpremeDijalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HealthClinic.Dialogs"
        xmlns:validations ="clr-namespace:HealthClinic.Utilities.Validations"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Spisak opreme" Height="450" Width="600" 
        MaxHeight="450" MinHeight="450"
        MaxWidth="300" MinWidth="600">
    <Grid Background="#cdfbf4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <!-- Informacije iznad spiska opreme-->
            <StackPanel HorizontalAlignment="Center">
                <!-- Odeljenje-->
                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        HorizontalAlignment="Left"
                        FontFamily="Times New Roman" 
                        FontSize="20" 
                        
                        Text="Odeljenje: "
                        Margin="0, 20, 0, 0"
                        Foreground="#FF2196F3">
                    </TextBlock>
                    <TextBlock 
                        HorizontalAlignment="Left"
                        FontFamily="Times New Roman" 
                        FontSize="20" 
                        FontStyle="Italic"
                        FontWeight="Bold"
                        Text="{Binding SelektovanaProstorija.Department}"
                        Margin="10, 20, 0, 0"
                        Foreground="#FF2196F3">
                    </TextBlock>
                </StackPanel>
                <!-- Kraj odeljenja -->

                <!-- Broj sobe-->
                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                        HorizontalAlignment="Left"
                        FontFamily="Times New Roman" 
                        FontSize="20" 
                        
                        
                        Text="Broj prostorije: "
                        Margin="0, 5, 0, 0"
                        Foreground="#FF2196F3">
                    </TextBlock>
                    <TextBlock 
                        HorizontalAlignment="Left"
                        FontFamily="Times New Roman" 
                        FontSize="20" 
                        FontStyle="Italic"
                        FontWeight="Bold"
                        Text="{Binding SelektovanaProstorija.NumberOfRoom}"
                        Margin="10, 5, 0, 0"
                        Foreground="#FF2196F3">
                    </TextBlock>
                </StackPanel>
                
                <!-- Kraj broja sobe -->
            </StackPanel>
            <!-- Kraj informacija iznad spiska opreme-->
            
            <!-- Prikaz spiska opreme-->
            <GroupBox
                Background="#FF226397"
                Header="Spisak opreme u prostoriji"
                Height="300"
                Width="250"
                FontSize="15"
                HorizontalContentAlignment="Center"
                
                Style="{DynamicResource MaterialDesignGroupBox}"
                Margin="16"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                BorderThickness="1">
                <ListView  
                    Width="295"
                    
                    SelectionMode="Single"
                    FontSize="14"
                    ItemsSource="{Binding SelektovanaProstorija.RoomInventory}" 
                    >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Naziv" DisplayMemberBinding="{Binding InventoryName}" Width="100"/>
                            <GridViewColumn Header="Koli&#x10D;ina" DisplayMemberBinding="{Binding Quantity}" Width="100"/>

                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
            <!-- Kraj spiska opreme-->
            
            
        </StackPanel>

        <StackPanel Grid.Column="1">
            <!-- Text iznad forme-->
            <TextBlock 
                HorizontalAlignment="Center"
                FontFamily="Times New Roman" 
                FontSize="20" 
                        
                Text="Manipulacija nad opremom"
                Margin="0, 30, 0, 0"
                Foreground="#FF2196F3">
            </TextBlock>
            <!-- Kraj texta iznad forme -->
            
            <!-- Naziv opreme -->
            <TextBox
                Validation.ErrorTemplate="{StaticResource errorTemplate}"
                Background="WhiteSmoke"
                FontWeight="DemiBold"
                Width="280"
                Height="40"
                Margin="10, 35, 10, 10"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                x:Name="Naziv"
                materialDesign:HintAssist.Hint="Ovde unesite naziv opreme"
                materialDesign:HintAssist.HelperText="Naziv opreme">
                <TextBox.Text>
                    <!-- Bajndovanje naziva opreme + validacija-->
                    <Binding 
                        Path="TrenutnaOprema.InventoryName"
                        ValidatesOnDataErrors="True"
                        UpdateSourceTrigger="PropertyChanged"
                        >
                        <Binding.ValidationRules>
                            <validations:MinimumCharacterRule MinimumCharacters="2"/>
                            <validations:MaximumCharacterRule MaximumCharacters="20"/>
                            <validations:WordRule/>
                        </Binding.ValidationRules>
                    </Binding>
                    <!-- Kraj bajndovanje naziva opreme + validacija-->
                </TextBox.Text>
            </TextBox>
            <!-- Kraj opreme -->
            
            <!-- Kolicina opreme -->
            <TextBox
                Validation.ErrorTemplate="{StaticResource errorTemplate}"
                Background="WhiteSmoke"
                FontWeight="DemiBold"
                Width="280"
                Height="40"
                Margin="10,20, 10, 10"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                x:Name="KolicinaOpreme"
                materialDesign:HintAssist.Hint="Ovde unesite koli&#x10D;inu opreme za dodavanje"
                materialDesign:HintAssist.HelperText="Koli&#x10D;ina opreme">
                <TextBox.Text>
                    <!-- Bajndovanje kolicina opreme + validacija-->
                    <Binding 
                        Path="TrenutnaOprema.Quantity"
                        ValidatesOnDataErrors="True"
                        UpdateSourceTrigger="PropertyChanged"
                        >
                        <Binding.ValidationRules>
                            <validations:MinimumCharacterRule MinimumCharacters="1"/>
                            <validations:MaximumCharacterRule MaximumCharacters="20"/>
                            <validations:NumberRule/>
                        </Binding.ValidationRules>
                    </Binding>
                    <!-- Kraj bajndovanje naziva leka + validacija-->
                </TextBox.Text>
            </TextBox>
            <!-- Kraj opreme -->
            
            <Button
                IsDefault="True"
                Command="{Binding DodajOpremuCommand}"
                Margin="0, 30, 0, 0"
                Height="40"
                Width="200"
                >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="PlusCircle" Margin="0, 0, 10, 0" />
                    <TextBlock Text="Dodaj opremu"/>
                </StackPanel>
            </Button>
            
            <Button
                Command="{Binding UkloniOpremuCommand}"
                Margin="0, 30, 0, 0"
                Height="40"
                Width="200"
                >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="DeleteEmpty" Margin="0, 0, 10, 0" />
                    <TextBlock Text="Ukloni opremu"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
        
    </Grid>
</Window>
