<Window x:Class="HealthClinic.Views.Dialogs.ProduzeneInformacije.AlergijeDijalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthClinic.Views.Dialogs.ProduzeneInformacije"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Alergije izabranog leka" Height="220" Width="330"
        MaxHeight="450" MinHeight="220"
        MaxWidth="400" MinWidth="300">

    <Grid Background="#cdfbf4">
        <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox
                IsEnabled="False"
                Width="250"
                Height="120"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Margin="0, 0 ,0, 0"
                TextWrapping="Wrap"
                Background="WhiteSmoke"
                FontWeight="DemiBold"
                FontFamily="Times New Roman" 
                FontSize="14" 
                materialDesign:HintAssist.Hint="Izmeni lek za dodavanje alergije"
                materialDesign:HintAssist.HelperText="Alergije koje lek izaziva"
                Text="{Binding SelektovaniLek.Alergije}"
                >
                
            </TextBox>
            
        </StackPanel>
    </Grid>
</Window>
